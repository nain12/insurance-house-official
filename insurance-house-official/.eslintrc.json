{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"                                ,
        "standard"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "semi": 0,
        "indent": 2,
        "quotes": ["error", "double"],
        "multiline-ternary": ["error", "never"],
        "comma-dangle": ["error", "never"],
        "react/prop-types": 0
    }
}
